<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.zz.zhufengtest.app.AlbumActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@mipmap/test1"
            >
        <ImageView
                android:id="@+id/album_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="40dp"
                android:src="@mipmap/ic_launcher"
                />
        <TextView
                android:id="@+id/album_textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/album_imageView"
                android:layout_marginTop="50dp"
                android:layout_marginRight="15dp"
                android:textColor="#fff"
                android:textSize="20sp"
                android:text="送客户发生的快捷方式可发生"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="#ff898989"
                />
    </RelativeLayout>
    <ListView
            android:id="@+id/album_listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

</LinearLayout>
